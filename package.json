{
  "name": "piq",
  "version": "1.0.2",
  "description": "Simple cross-platform image browser.",
  "homepage": "https://github.com/slebetman/piq",
  "main": "index.mjs",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-mac": "electron-builder --mac",
    "build-deb": "electron-builder --linux deb --x64"
  },
  "author": "Adly Abdullah <slebetman@gmail.com>",
  "license": "BSD-2-Clause",
  "build": {
    "fileAssociations": [
      {
        "ext": "jpg",
        "name": "JPEG",
        "role": "Viewer"
      },
      {
        "ext": "jpeg",
        "name": "JPEG",
        "role": "Viewer"
      },
      {
        "ext": "png",
        "name": "PNG",
        "role": "Viewer"
      },
      {
        "ext": "webp",
        "name": "WebP",
        "role": "Viewer"
      },
      {
        "ext": "*",
        "name": "Anything",
        "role": "Viewer"
      }
    ],
    "linux": {
      "category": "Graphics",
      "asar": true,
      "asarUnpack": [
        "**/node_modules/sharp/**/*",
        "**/node_modules/@img/**/*"
      ]
    }
  },
  "devDependencies": {
    "electron": "^32.1.0",
    "electron-builder": "^25.0.5"
  },
  "dependencies": {
    "open": "^10.1.0",
    "sharp": "^0.33.5",
    "trash": "^9.0.0",
    "xdg-portable": "^10.6.0"
  }
}
