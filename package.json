{
  "name": "piq",
  "version": "1.0.0",
  "description": "Simple cross-platform image browser.",
  "main": "index.mjs",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-packager . --out build --icon icons/icon512 --overwrite true",
    "package-deb": "electron-installer-debian --src build/piq-linux-x64/ --dest build/ --arch amd64 --icon icons/icon128.png --description 'Simple cross-platform image browser.'",
    "package-dmg": "electron-installer-dmg build/piq-darwin-arm64/piq.app piq --out build --icon icons/icon512.icns --overwrite"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@electron/packager": "^18.3.5",
    "electron": "^32.1.0",
    "electron-installer-debian": "^3.2.0",
    "electron-installer-dmg": "^5.0.1"
  },
  "dependencies": {
    "open": "^10.1.0",
    "sharp": "^0.33.5",
    "trash": "^9.0.0",
    "xdg-portable": "^10.6.0"
  }
}
