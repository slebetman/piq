{
  "name": "piq",
  "version": "1.1.10",
  "description": "Simple cross-platform image browser.",
  "homepage": "https://github.com/slebetman/piq",
  "main": "src/index.mjs",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-mac": "electron-builder --mac",
    "build-deb": "electron-builder --linux deb --x64"
  },
  "author": "Adly Abdullah <slebetman@gmail.com>",
  "license": "BSD-2-Clause",
  "build": {
    "electronLanguages": [
      "en-US"
    ],
    "fileAssociations": [
      {
        "ext": "jpg",
        "name": "JPEG",
        "role": "Viewer"
      },
      {
        "ext": "jpeg",
        "name": "JPEG",
        "role": "Viewer"
      },
      {
        "ext": "png",
        "name": "PNG",
        "role": "Viewer"
      },
      {
        "ext": "webp",
        "name": "WebP",
        "role": "Viewer"
      },
      {
        "ext": "avif",
        "name": "AVIF",
        "role": "Viewer"
      },
      {
        "ext": "*",
        "name": "Anything",
        "role": "Viewer"
      }
    ],
    "linux": {
      "category": "Graphics",
      "asar": true,
      "asarUnpack": [
        "**/node_modules/sharp/**/*",
        "**/node_modules/@img/**/*"
      ]
    },
    "dmg": {
      "background": "icons/bg.tiff"
    }
  },
  "devDependencies": {
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-prompt": "^1.7.0",
    "open": "^11.0.0",
    "sharp": "^0.34.5",
    "xdg-portable": "^10.6.0"
  }
}
